// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


enum PageStatus {
  DRAFT
  PUBLISHED
}


model Page {
  id              String     @id @default(auto()) @map("_id") @db.ObjectId
  name            String     @unique
  slug            String     @unique
  blocks          Json[]
  metaTitle       String? 
  metaKeyWords    String?
  metaDescription String?
  featuredImage   String?
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  status          PageStatus @default(DRAFT)  
}

model File {
   id            String     @id @default(auto()) @map("_id") @db.ObjectId
   url           String
   name          String?
   width         Int
   height        Int
}

model GlobalBlock {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  name          String     @unique
  block         Json
}

enum Role  {
    MAIN_ADMIN
    EDITOR
}

enum AdminStatus {
  PENDING
  ACTIVE
}

model AdminUser {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  name          String?     
  email         String
  password      String?
  avatar        String?
  invitationDate  DateTime?
  status          AdminStatus
  createdAt       DateTime   @default(now())
  role          Role
}
